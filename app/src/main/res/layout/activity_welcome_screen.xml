<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_margin="15dp"   tools:context=".Authentication.welcomeScreen">
    <LinearLayout
        android:id="@+id/linearLayout_logo"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_height="400dp">
        <ImageView
            android:id="@+id/splash_screen_image"
            android:layout_width="200dp"
            android:layout_gravity="center"
            android:foregroundGravity="center"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/linkedin" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearLayout_linkdN"
        android:layout_width="match_parent"
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_below="@id/linearLayout_logo"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:text="LinkedIn"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:id="@+id/LinkedN_textView"
            android:textSize="50sp"
            android:layout_height="wrap_content"/>

    </LinearLayout>


</RelativeLayout>